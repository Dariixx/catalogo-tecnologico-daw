---
// src/components/ArticleCard.astro

interface Article {
  title: string;
  slug: string;
  description?: string;
  coverUrl?: string;
  authorName?: string;
  publishedAt?: string | Date;
  readingTime?: number;
}

interface Props {
  article: Article;
}

const { article } = Astro.props;
const {
  title,
  slug,
  description,
  coverUrl,
  authorName,
  publishedAt,
  readingTime,
} = article;

const articleUrl = `/blog/${slug}`;

const formattedDate = publishedAt
  ? new Intl.DateTimeFormat("es-ES", {
      day: "numeric",
      month: "short",
      year: "numeric",
    }).format(new Date(publishedAt))
  : null;
---

<article
  class="group flex flex-col rounded-xl overflow-hidden transition-all duration-300"
  style="background: #151a22; border: 1px solid rgba(255,255,255,0.08);"
  onmouseover="this.style.border='1px solid rgba(30,136,229,0.35)'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 32px rgba(30,136,229,0.08)';"
  onmouseout="this.style.border='1px solid rgba(255,255,255,0.08)'; this.style.transform='translateY(0)'; this.style.boxShadow='none';"
>

  <!-- Cover -->
  <a href={articleUrl} class="block overflow-hidden shrink-0" tabindex="-1" aria-hidden="true">
    {coverUrl ? (
      <img
        src={coverUrl}
        alt={title}
        class="w-full h-44 object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div
        class="w-full h-44 flex items-center justify-center"
        style="background: rgba(255,255,255,0.03);"
      >
        <svg
          width="44"
          height="44"
          viewBox="0 0 44 44"
          fill="none"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect width="44" height="44" rx="10" fill="rgba(30,136,229,0.07)" />
          <path
            d="M13 14h18M13 20h18M13 26h12"
            stroke="rgba(229,229,229,0.18)"
            stroke-width="1.5"
            stroke-linecap="round"
          />
          <rect
            x="9"
            y="10"
            width="26"
            height="24"
            rx="3"
            fill="none"
            stroke="rgba(229,229,229,0.12)"
            stroke-width="1.5"
          />
        </svg>
      </div>
    )}
  </a>

  <!-- Contenido -->
  <div class="flex flex-col flex-1 p-5 gap-3">

    <!-- Título -->
    <a href={articleUrl}>
      <h2
        class="text-base font-semibold leading-snug transition-colors duration-200 line-clamp-2"
        style="color: #e5e5e5;"
        onmouseover="this.style.color='#3aa0ff';"
        onmouseout="this.style.color='#e5e5e5';"
      >
        {title}
      </h2>
    </a>

    <!-- Descripción -->
    {description && (
      <p
        class="text-sm leading-relaxed line-clamp-2 flex-1"
        style="color: rgba(229,229,229,0.55);"
      >
        {description}
      </p>
    )}

    <!-- Meta -->
    {(authorName || formattedDate || readingTime) && (
      <div
        class="flex flex-wrap items-center gap-x-3 gap-y-1 pt-2 mt-auto"
        style="border-top: 1px solid rgba(255,255,255,0.06);"
      >
        {authorName && (
          <span class="flex items-center gap-1.5 text-xs" style="color: rgba(229,229,229,0.5);">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
              <circle cx="6" cy="4" r="2.5" stroke="currentColor" stroke-width="1.2" />
              <path d="M1.5 10.5c0-2.485 2.015-4 4.5-4s4.5 1.515 4.5 4" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" />
            </svg>
            {authorName}
          </span>
        )}

        {formattedDate && (
          <span class="flex items-center gap-1.5 text-xs" style="color: rgba(229,229,229,0.4);">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
              <rect x="1" y="2" width="10" height="9" rx="1.5" stroke="currentColor" stroke-width="1.2" />
              <path d="M4 1v2M8 1v2M1 5h10" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" />
            </svg>
            {formattedDate}
          </span>
        )}

        {readingTime && (
          <span class="flex items-center gap-1.5 text-xs" style="color: rgba(229,229,229,0.4);">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
              <circle cx="6" cy="6" r="4.5" stroke="currentColor" stroke-width="1.2" />
              <path d="M6 3.5V6l1.5 1.5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            {readingTime} min
          </span>
        )}
      </div>
    )}

    <!-- CTA -->
    
      <a
      href={articleUrl}
          class="mt-2 inline-flex items-center gap-2 text-sm font-medium transition-colors duration-200 w-fit"
          style="color: rgba(30,136,229,0.9);"
          onmouseover="this.style.color='#3aa0ff';"
          onmouseout="this.style.color='rgba(30,136,229,0.9)';"
        aria-label={`Leer artículo: ${title}`}
        >
        Leer artículo
      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
      <path d="M5 3l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
  </svg>
</a>
  </div>
</article>