---
// src/components/CategoryCard.astro

interface Category {
  name: string;
  slug: string;
  description?: string;
}

interface Props {
  category: Category;
}

const { category } = Astro.props;
const { name, slug, description } = category;

const categoryUrl = `/categorias/${slug}`;
---

<article
  class="group relative flex flex-col rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-1 focus-within:-translate-y-1"
  style="background: #151a22; border: 1px solid rgba(255,255,255,0.08);"
>
  <!-- Hover ring + shadow -->
  <div
    class="pointer-events-none absolute inset-0 opacity-0 group-hover:opacity-100 group-focus-within:opacity-100 transition-opacity duration-300"
    style="box-shadow: 0 18px 45px rgba(0,0,0,0.30); border: 1px solid rgba(58,160,255,0.22); border-radius: 1rem;"
  ></div>

  <div class="relative flex flex-col flex-1 p-6 gap-4">
    <!-- Icono decorativo -->
    <div
      class="w-11 h-11 rounded-xl flex items-center justify-center shrink-0"
      style="background: rgba(30,136,229,0.10); border: 1px solid rgba(30,136,229,0.22);"
      aria-hidden="true"
    >
      <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="1" y="1" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.72)" />
        <rect x="11" y="1" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.42)" />
        <rect x="1" y="11" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.42)" />
        <rect x="11" y="11" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.72)" />
      </svg>
    </div>

    <!-- Nombre -->
    <h2 class="text-base font-semibold leading-snug" style="color: #e5e5e5;">
      {name}
    </h2>

    <!-- Descripción -->
    {description ? (
      <p class="text-sm leading-relaxed line-clamp-2 flex-1" style="color: rgba(229,229,229,0.55);">
        {description}
      </p>
    ) : (
      <p class="text-sm leading-relaxed flex-1" style="color: rgba(229,229,229,0.40);">
        Explora productos de esta categoría.
      </p>
    )}

    <!-- CTA (FIX: aquí iba el <a ...) -->
    <a
      href={categoryUrl}
      class="mt-auto inline-flex items-center gap-2 text-sm font-semibold transition-all duration-200 w-fit focus:outline-none focus-visible:ring-2"
      style="color: rgba(30,136,229,0.92);"
      aria-label={`Ver categoría: ${name}`}
    >
      Ver categoría
      <svg
        width="14"
        height="14"
        viewBox="0 0 14 14"
        fill="none"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        class="transition-transform duration-200 group-hover:translate-x-0.5"
      >
        <path
          d="M3 7h8M7.5 4l3 3-3 3"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </a>
  </div>
</article>