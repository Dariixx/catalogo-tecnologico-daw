---
// src/components/CategoryCard.astro

interface Category {
  name: string;
  slug: string;
  description?: string;
}

interface Props {
  category: Category;
}

const { category } = Astro.props;
const { name, slug, description } = category;

const categoryUrl = `/categorias/${slug}`;
---

<article
  class="group flex flex-col rounded-xl overflow-hidden transition-all duration-300"
  style="background: #151a22; border: 1px solid rgba(255,255,255,0.08);"
  onmouseover="this.style.border='1px solid rgba(30,136,229,0.35)'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 32px rgba(30,136,229,0.08)';"
  onmouseout="this.style.border='1px solid rgba(255,255,255,0.08)'; this.style.transform='translateY(0)'; this.style.boxShadow='none';"
>
  <div class="flex flex-col flex-1 p-6 gap-4">

    <!-- Icono decorativo -->
    <div
      class="w-10 h-10 rounded-lg flex items-center justify-center shrink-0"
      style="background: rgba(30,136,229,0.1); border: 1px solid rgba(30,136,229,0.2);"
    >
      <svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
      >
        <rect x="1" y="1" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.7)" />
        <rect x="11" y="1" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.4)" />
        <rect x="1" y="11" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.4)" />
        <rect x="11" y="11" width="6" height="6" rx="1.5" fill="rgba(30,136,229,0.7)" />
      </svg>
    </div>

    <!-- Nombre -->
    <h2
      class="text-base font-semibold leading-snug transition-colors duration-200"
      style="color: #e5e5e5;"
    >
      {name}
    </h2>

    <!-- Descripción -->
    {description && (
      <p
        class="text-sm leading-relaxed line-clamp-2 flex-1"
        style="color: rgba(229,229,229,0.55);"
      >
        {description}
      </p>
    )}

    <!-- CTA -->
    
      href={categoryUrl}
      class="mt-auto inline-flex items-center gap-2 text-sm font-medium transition-colors duration-200"
      style="color: rgba(30,136,229,0.9);"
      onmouseover="this.style.color='#3aa0ff';"
      onmouseout="this.style.color='rgba(30,136,229,0.9)';"
      aria-label={`Ver categoría: ${name}`}
    >
      Ver categoría
      <svg
        width="14"
        height="14"
        viewBox="0 0 14 14"
        fill="none"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        class="transition-transform duration-200 group-hover:translate-x-0.5"
      >
        <path
          d="M3 7h8M7.5 4l3 3-3 3"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </a>
  </div>
</article>