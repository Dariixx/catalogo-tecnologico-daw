---
import { site } from "../config/site";
const { brand } = Astro.props;

const year = new Date().getFullYear();
const links = site.footerLinks;
---

<footer style="background:#151a22; border-top:1px solid rgba(255,255,255,0.08);">
  <div class="container-page py-10">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-8">

      <div class="flex flex-col gap-2">
       <a href="/" class="flex items-center gap-2 group w-fit">
      <img
          src="/brand/logo-nombre.png"
          alt="ZetaGadget"
        class="h-20 w-auto opacity-90 transition-opacity duration-200 group-hover:opacity-100"
          />
        </a>
        <p class="text-xs" style="color: rgba(229,229,229,0.45);">
          {brand?.tagline || site.tagline}
        </p>
      </div>

      <nav class="flex flex-wrap gap-x-6 gap-y-2">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-sm transition-colors duration-200"
            style="color: rgba(229,229,229,0.65);"
            onmouseover="this.style.color='#3aa0ff';"
            onmouseout="this.style.color='rgba(229,229,229,0.65)';"
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>
  </div>

  <div style="border-top:1px solid rgba(255,255,255,0.06);">
    <div class="container-page py-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
      <p class="text-xs" style="color: rgba(229,229,229,0.4);">
        Â© {year} {brand?.name || site.name}. Todos los derechos reservados.
      </p>
      <p class="text-xs flex items-center gap-1" style="color: rgba(229,229,229,0.3);">
        Hecho con <span class="font-medium" style="color: rgba(229,229,229,0.45);">Astro</span> +{" "}
        <span class="font-medium" style="color: rgba(229,229,229,0.45);">Strapi</span>
      </p>
    </div>
  </div>
</footer>
